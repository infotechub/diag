@model NovoDiagnosis.Models.DiagnosisDetails

@{
    ViewData["Title"] = "Edit";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row mb">
            <div class="col-lg-12">

                <div class="row mb">
                    <!-- page start-->
                    <div class="content-panel border rounded">
                        <div class="adv-table">
                            <h3 align="center">Update Your Annual Diagnosis Records</h3><hr width="250" />
                            <p align="center"> Kindly fill the form below to submit an appointment for medical check. <br />You will receive a confirmation email if your request is approved. <br />Ensure you check both inbox and soam for the mail.</p>
                            <div class="container">
                                <form asp-action="Edit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group">
                                        <label asp-for="FullName" class="control-label"></label>
                                        <input asp-for="FullName" class="form-control" readonly />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="StaffId" class="control-label"></label>
                                        <input asp-for="StaffId" class="form-control" readonly />
                                        <span asp-validation-for="StaffId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Provider" class="control-label"></label>
                                        <input asp-for="Provider" class="form-control" readonly />
                                        <span asp-validation-for="Provider" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="State" class="control-label"></label>
                                        <input asp-for="State" class="form-control" readonly />
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" readonly />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber" class="control-label"></label>
                                        <input asp-for="PhoneNumber" class="form-control" readonly />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CompletedAnnualMedical" class="control-label"></label>
                                        <input asp-for="CompletedAnnualMedical" readonly />
                                        <span asp-validation-for="CompletedAnnualMedical" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Approve" class="control-label">Approve Request</label>
                                        <input asp-for="Approve" />
                                        <span asp-validation-for="Approve" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Reject" class="control-label">Reject Request</label>
                                        <input asp-for="Reject" />
                                        <span asp-validation-for="Reject" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Recommendation" class="control-label">Reason For Rejection</label>
                                        <input asp-for="Recommendation" class="form-control" />
                                        <span asp-validation-for="Recommendation" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="AuthorizationCode" class="control-label"></label>
                                        <input asp-for="AuthorizationCode" class="form-control" />
                                        <span asp-validation-for="AuthorizationCode" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Diagnosis" class="control-label"></label>
                                        <input asp-for="Diagnosis" class="form-control" />
                                        <span asp-validation-for="Diagnosis" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-facebook" />
                                    </div>
                                </form>
                                <br />
                                <div>
                                    <a asp-action="Index">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><section></section>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
